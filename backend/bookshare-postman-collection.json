{
  "info": {
    "name": "BookShare API (MongoDB) - Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "bookshare-collection-001"
  },
  "item": [
    {
      "name": "Register (User)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Praew\",\n  \"email\": \"praew@example.com\",\n  \"password\": \"123456\",\n  \"role\": \"seller\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/register",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "users",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login (User)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"praew@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "users",
            "login"
          ]
        }
      }
    },
    {
      "name": "Get Me (Profile)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/users/me",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "users",
            "me"
          ]
        }
      }
    },
    {
      "name": "List Categories",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/categories",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "categories"
          ]
        }
      }
    },
    {
      "name": "Create Category (admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"Textbook\" }"
        },
        "url": {
          "raw": "{{base_url}}/api/categories",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "categories"
          ]
        }
      }
    },
    {
      "name": "List Books",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/books",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "Create Book (seller) - form-data",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "title",
              "value": "Intro to Algorithms",
              "type": "text"
            },
            {
              "key": "author",
              "value": "Cormen",
              "type": "text"
            },
            {
              "key": "price",
              "value": "250.00",
              "type": "text"
            },
            {
              "key": "condition",
              "value": "used",
              "type": "text"
            },
            {
              "key": "categoryId",
              "value": "{{example_category_id}}",
              "type": "text"
            },
            {
              "key": "image",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/books",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "Get Book by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/books/{{book_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "books",
            "{{book_id}}"
          ]
        }
      }
    },
    {
      "name": "Create Order (buyer)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"bookId\": \"{{book_id}}\" }"
        },
        "url": {
          "raw": "{{base_url}}/api/orders",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "orders"
          ]
        }
      }
    },
    {
      "name": "Upload Payment Slip (form-data)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "slip",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/orders/{{order_id}}/upload-slip",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "orders",
            "{{order_id}}",
            "upload-slip"
          ]
        }
      }
    },
    {
      "name": "List My Orders (buyer)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/orders/me",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "orders",
            "me"
          ]
        }
      }
    },
    {
      "name": "Create Review for Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"orderId\": \"{{order_id}}\", \"rating\": 5, \"comment\": \"Great seller!\" }"
        },
        "url": {
          "raw": "{{base_url}}/api/reviews",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "reviews"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "example_category_id",
      "value": ""
    },
    {
      "key": "book_id",
      "value": ""
    },
    {
      "key": "order_id",
      "value": ""
    }
  ]
}